<Window x:Class="Military.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Military"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Military maneuvers"   
        Icon="C:\Users\Yulian\Desktop\Military\Military\Officer.png" 
        Width="1000"
        Height="765"
        ResizeMode="NoResize"
        mc:Ignorable="d">
    <Grid Background="Black">
        <StackPanel VerticalAlignment="Top">
            <Menu Width="Auto" Height="20">
                <MenuItem Header="Parallelogram options">
                    <MenuItem x:Name="FindingAll"
                              Width="270"
                              HorizontalAlignment="Left"
                              Header="Option 1" />
                </MenuItem>
                <MenuItem Header="_Tools">
                    <MenuItem x:Name="BorderColor"
                              Width="auto"
                              Margin="0,0,0,0"
                              HorizontalAlignment="Left"
                              Header="Tools 1" />
                </MenuItem>
            </Menu>
        </StackPanel>
        <Canvas x:Name="root_Canvas"
                Width="694"
                Height="617"
                Margin="289,20,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Black"
                Cursor="Pen">
        </Canvas>
        <Border x:Name="Border_Option"
                Margin="0,20,710,87"
                Background="Black"
                BorderBrush="#FF2C32C3"
                BorderThickness="4"
                CornerRadius="8"
                Cursor="Hand">
            <Border.Effect>
                <DropShadowEffect BlurRadius="100"
                                  ShadowDepth="5"
                                  Color="#FF1F15F1" />
            </Border.Effect>
        </Border>
        <DataGrid x:Name="dataGrid"
                  Margin="0,637,0,0"
                  Background="LightYellow"
                  BorderBrush="#FFE4650E"
                  BorderThickness="3"
                  CanUserAddRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="False"
                  CanUserSortColumns="False"
                  EnableColumnVirtualization="false"
                  EnableRowVirtualization="false"
                  Foreground="#FF4521E4"
                  HorizontalGridLinesBrush="Violet"
                  HorizontalScrollBarVisibility="Visible"
                  IsReadOnly="True"
                  RowBackground="MistyRose"
                  SelectionMode="Single" 
                  ColumnWidth="1*">
            <DataGrid.Effect>
                <DropShadowEffect BlurRadius="100"
                                  ShadowDepth="5"
                                  Color="#FFEC800F" />
            </DataGrid.Effect>
        </DataGrid>
        <Label Margin="12,41,937,623"
               Content="6"
               FontFamily="Wingdings"
               FontSize="25"
               FontWeight="Bold"
               Foreground="#FFB7D414" />
        <Label x:Name="OptionStartLabel"
               Margin="38,43,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Military maneurus"
               FontSize="16"
               FontStyle="Italic"
               Foreground="#FFD69D15"
               RenderTransformOrigin="-4.829,-1.288" />
        <TextBox x:Name="targets_Count"
                 Width="41"
                 Height="23"
                 Margin="206,90,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 FontSize="16"
                 Text="20"
                 TextWrapping="Wrap" />
        <Label Margin="26,84,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Input maximim targets :"
               FontSize="16"
               FontStyle="Italic"
               Foreground="#FFC415D6"
               RenderTransformOrigin="-4.829,-1.288" />
        <Border Margin="10,74,728,516"
                BorderBrush="#FF73CB0F"
                BorderThickness="3"
                CornerRadius="25">
            <Border.Effect>
                <DropShadowEffect BlurRadius="0"
                                  ShadowDepth="0"
                                  Color="#FF06D9EE" />
            </Border.Effect>
        </Border>
        <TextBox IsReadOnly="True" 
                 IsReadOnlyCaretVisible="True" 
                 Width="25"
                 Height="23"
                 Margin="38,277,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 FontSize="16"
                 TextWrapping="Wrap" BorderBrush="White" SelectionBrush="White" Foreground="White" />
        <Button x:Name="button_Start"
                Width="222"
                Margin="27,130,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Start military maneurus"
                RenderTransformOrigin="2.862,0.366" />
        <Label Margin="6,226,943,437"
               Content="9"
               FontFamily="Wingdings"
               FontSize="25"
               FontWeight="Bold"
               Foreground="Crimson" />
        <Label x:Name="OptionStateLabel"
               Margin="38,228,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Targets state :"
               FontSize="16"
               FontStyle="Italic"
               Foreground="#FF23E3EC"
               RenderTransformOrigin="-4.829,-1.288" />
        <Label Width="140"
               Margin="74,273,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Target 0% hp lost"
               FontSize="16"
               FontStyle="Italic"
               Foreground="White"
               RenderTransformOrigin="-4.829,-1.288" />
        <TextBox IsReadOnly="True" 
            IsReadOnlyCaretVisible="True" 
            Width="25"
            Height="24"
            Margin="38,313,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="16"
            TextWrapping="Wrap" BorderBrush="Lime" Background="Lime" Foreground="Lime" SelectionBrush="Lime" />
        <Label Width="173"
            Margin="74,309,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Target 35-45% hp lost"
            FontSize="16"
            FontStyle="Italic"
            Foreground="Lime"
            RenderTransformOrigin="-4.829,-1.288" />
        <TextBox IsReadOnly="True" 
            IsReadOnlyCaretVisible="True" 
            Width="25"
            Height="24"
            Margin="38,349,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="16"
            TextWrapping="Wrap" BorderBrush="Yellow" Background="Yellow" Foreground="Yellow" SelectionBrush="Yellow" />
        <Label Width="140"
            Margin="74,345,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Target 50% hp lost"
            FontSize="16"
            FontStyle="Italic"
            Foreground="Yellow" 
            RenderTransformOrigin="-4.829,-1.288" />
        <TextBox IsReadOnly="True" 
            IsReadOnlyCaretVisible="True" 
            Width="25"
            Height="24"
            Margin="38,385,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="16"
            TextWrapping="Wrap" BorderBrush="Coral" Background="Coral" Foreground="Coral" SelectionBrush="Coral" />
        <Label Width="140"
            Margin="74,381,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Target 50-85% hp lost"
            FontSize="16"
            FontStyle="Italic"
            Foreground="Coral" 
            RenderTransformOrigin="-4.829,-1.288" />
        <TextBox IsReadOnly="True" 
            IsReadOnlyCaretVisible="True" 
            Width="25"
            Height="24"
            Margin="38,421,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="16"
            TextWrapping="Wrap" BorderBrush="OrangeRed" Background="OrangeRed" Foreground="OrangeRed" SelectionBrush="OrangeRed" />
        <Label Width="173"
            Margin="74,417,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Target 85-99% hp lost"
            FontSize="16"
            FontStyle="Italic"
            Foreground="OrangeRed" 
            RenderTransformOrigin="-4.829,-1.288" />
        <TextBox IsReadOnly="True" 
            IsReadOnlyCaretVisible="True" 
            Width="25"
            Height="24"
            Margin="38,457,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="16"
            TextWrapping="Wrap" BorderBrush="Red" Background="Red" Foreground="Red" SelectionBrush="Red" />
        <Label Width="158"
            Margin="74,453,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Target 100% hp lost"
            FontSize="16"
            FontStyle="Italic"
            Foreground="Red" 
            RenderTransformOrigin="-4.829,-1.288" />
        <Border Margin="12,262,726,234"
            BorderBrush="#FF73CB0F"
            BorderThickness="3"
            CornerRadius="25">
            <Border.Effect>
                <DropShadowEffect BlurRadius="0"
                    ShadowDepth="0"
                    Color="#FF06D9EE" />
            </Border.Effect>
        </Border>
    </Grid>
</Window>
